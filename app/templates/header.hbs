<div class="container">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="sr-only">Toggle Navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand home-menu" href="#">Circle K</a>
  </div>

  <div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
      {{> navigation}}
    </ul>

    {{#if me}}
      <ul class="nav navbar-nav navbar-menu navbar-right">
        <li><p class="navbar-text" style="color: white;">Logged in as {{me.unq}}</p></li>
        <li><a href="#account">My Account</a></li>
        <li><a href="#" class="js-logout">Logout</a></li>
      </ul>
    {{else}}
      <div class="navbar-right">
        <div id="login-form" class="dropdown" style="display: inline-block;">
          <button type="button" class="btn btn-success dropdown-toggle navbar-btn" data-toggle="dropdown">
            Login <span class="caret"></span>
          </button>
          <div class="dropdown-menu" style="width: 300px; padding: 10px;">
            <form class="form-horizontal js-login">
              <div class="form-group">
                <label class="control-label sr-only" for="login-unq">Uniquename</label>
                <div class="col-sm-12">
                  <input type="text" id="login-unq" class="form-control input-sm js-unq" placeholder="Uniquename" />
                </div>
              </div>

              <div class="form-group">
                <label class="control-label sr-only" for="login-pass">Uniquename</label>
                <div class="col-sm-12">
                  <input type="password" id="login-pass" class="form-control input-sm js-password" placeholder="Password" />
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-12">
                  <button type="submit" class="btn btn-block btn-success btn-sm">Sign in</button>
                </div>
              </div>
            </form>

            <div class="row">
              <span class="col-sm-12">
                Not a member yet?  <a href="#join">Join now!</a>
              </span>
            </div>
          </div>
        </div>
      </div>
    {{/if}}

  </div>
</div>
